#!/usr/bin/env zunit

AGKOZAK_ZPML_RPROMPT=()

@test 'Testing borekb theme in color and monochrome' {
	load ../agkozak-zsh-theme.plugin.zsh

	zpml load borekb

	[[ "$(zpml_construct_prompt ZPML_PROMPT color)" == $'%(?..%B%F{red}(%?%)%f%b )%B%F{blue}%2v%f%b%F{243}%3v%f\n%(!.#.$) ' ]]

	assert $state equals 0

	zpml load borekb

	[[ "$(zpml_construct_prompt ZPML_PROMPT mono)" == $'%(?..%B(%?%)%b )%B%2v%b%3v\n%(!.#.$) ' ]]

	assert $state equals 0
}

